/dts-v1/;
#include "suniv-f1c100s.dtsi"

/ {
	model = "LCTech Cherry Pi";
	compatible = "lctech,cherrypi", "allwinner,suniv-f1c200s", "allwinner,suniv-f1c100s";

	aliases {
		serial0 = &uart1;
		spi0 = &spi0;
		spi1 = &spi1;
	};

	chosen {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		bootargs = "console=ttyS0,115200 rootwait ubi.mtd=0 root=/dev/ubi0:rootfs rootfstype=ubifs loglevel=8 init=/preinit ofsdev=ubi0:rootfs_data ofstype=ubifs";
	};

	lcd: framebuffer-lcd {
		compatible = "allwinner,simple-framebuffer",
			     "simple-framebuffer";
		allwinner,pipeline = "de_be0-lcd0";
		clocks = <&ccu CLK_BUS_DE_BE>, <&ccu CLK_DE_BE>,
			 <&ccu CLK_DRAM_DE_BE>, <&ccu CLK_BUS_LCD>,
			 <&ccu CLK_TCON>;
		status = "disabled";
	};
};

&spi0 {
	status = "okay";

	nand0: flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		label = "nand0";
		reg = <0>;
		spi-max-frequency = <108000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x0 0xf0000>;
				read-only;
			};

			partition@1 {
				label = "u-boot-env";
				reg = <0xf0000 0x10000>;
			};

			partition@2 {
				label = "kernel";
				reg = <0x100000 0x700000>;
			};

			partition@3 {
				label = "ubi";
				reg = <0x800000 0x7800000>;
			};
		};
	};
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pa_pins>;
	status = "okay";
};

&mmc0 {
	status = "okay";
	broken-cd;
};

&otg_sram {
	status = "okay";
};

&usb_otg {
	status = "okay";
	dr_mode = "peripheral";



};

&usbphy {
	status = "okay";
};

&cedar_ve {
	status = "okay";
};

&ion {
	status = "okay";
};

&codec {
	status = "okay";
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"LINEIN", "Line In",
		"FMINL", "Left FM In",
		"FMINR", "Right FM In",
		"MIC", "Mic";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pd_pins>;
	status = "okay";
};
